{% extends 'base.html.twig' %}

{% block css %}
    <link href="{{ asset('plugins/datepicker/datepicker3.css') }}" rel="stylesheet">
    <link href="{{ asset('css/select2-bootstrap4.vars.scss') }}" rel="stylesheet">
    <link href="{{ asset('plugins/select2/css/select2.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/select2-bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/select2-bootstrap4.after.scss') }}" rel="stylesheet">
{% endblock %}

{% block javascript_file %}
    <script src="{{ asset('plugins/datepicker/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('plugins/select2/js/select2.min.js') }}"></script>
    <script src="{{ asset('js/find-sched.js') }}"></script>
{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Find ship schedules for your travel</h1>
            <p class="lead text-muted">We can help find vessel trips nearest to your location including alternative destination routes&mdash; You can see prices to compare, shipping company information and more details about the vessel.</p>
                {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.origin, {
                                'attr' : {
                                    'class' : 'form-control'
                                }
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.destination, {
                                'attr' : {
                                    'class' : 'form-control'
                                }
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.date, {
                                'attr' : {
                                    'class' : 'form-control form-control-md',
                                    'size'  : 11
                                }
                            }) }}
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">Find schedule now</button>
                {{ form_end(form) }}
        </div>
    </section>

    <div class="album">
        <div class="container">
            <div class="row">
                {% if schedules %}
                        <div class="col-2"></div>
                        <div class="col-8">
                            <div class="list-group result-sked">
                                {% for sched in schedules %}
                                    <a href="{{ path('detail', {'id' : sched.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">
                                                {{ sched.vessel }}
                                                <span class="small-sched">({{ sched.depCity }} - {{ sched.destCity }})</span>
                                            </h5>
                                            <small>
                                                {% if sched.passPriceRange %}
                                                    &#8369;{{ sched.passPriceRange }}
                                                {% else %}
                                                    &#8369; N/A
                                                {% endif %}
                                            </small>
                                        </div>
                                        <p class="mb-1">
                                            {{ sched.departPort }} ({{ sched.departTime }}) -
                                            {{ sched.arrivePort }} ({{ sched.arriveTime }})
                                            <small><span class="badge badge-pill badge-success">{{ sched.vesselType }}</span></small>
                                        </p>
                                        <small>
                                            {{ sched.company }}
                                        </small>
                                    </a>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-2"></div>
                {% else %}
                    <div class="col-2"></div>
                    <div class="col-8">
                        {% if from_form %}
                            <div class="alert alert-info" role="alert">
                                Sorry but we did not found a vessel for that day. Please try a different date.
                            </div>
                        {% else %}
                            <div class="card card-full">
                                <div class="card-header bg-dark text-white">
                                        Your city/town origin
                                </div>
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                    <p>Search from the list the city or town where you are going to depart.
                                    <br>This is for us to find ports and ship schedules within your area or province.</p>
                                    </blockquote>
                                    <a href="javascript:void(0)" class="btn btn-primary btn-sm" id="scrolldepart">Start search</a>
                                </div>
                            </div>
                            <div class="card card-full">
                                <div class="card-header bg-dark text-white">
                                    Travelling to city/town
                                </div>
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                    <p>Search from the list the city or town where you are going to travel.
                                    <br>This is for us to find ports and ship schedules in that area or province.</p>
                                    </blockquote>
                                    <a href="javascript:void(0)" class="btn btn-primary btn-sm" id="scrolldest">Start search</a>
                                </div>
                            </div>
                            <div class="card card-full">
                                <div class="card-header bg-dark text-white">
                                    When will be your travel date?
                                </div>
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                    <p>Choose a date when you are travelling. This will help us find trips scheduled on that day.</p>
                                    </blockquote>
                                    <a href="javascript:void(0)" class="btn btn-primary btn-sm" id="scrolldate">Input date</a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-2"></div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
