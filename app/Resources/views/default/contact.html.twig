{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <i class="material-icons md-92">contact_mail</i>
            <h1 class="jumbotron-heading">Contact Us</h1>
            <p class="lead">
                <strong><i class="material-icons">phone</i></strong> (+63) 917 3123977<br>
                <strong><i class="material-icons">mail</i> </strong> admin@shipsked.ph<br>
                <br>
                <a href="https://facebook.com/shipsked"><img src="{{ asset('images/Facebook.png') }}" width="50" height="50"></a>
                <a href="https://google.com/shipsked"><img src="{{ asset('images/Google.png') }}" width="50" height="50"></a>
                <a href="https://instagram.com/shipsked"><img src="{{ asset('images/Instagram.png') }}" width="50" height="50"></a>
            </p>
            <p class="lead">
                We are looking forward for shipping companies to partner with us! 
            </p>
        </div>
        <br>
        <br>
    </section>

    <div class="album">
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                {% for message in app.session.flashBag.get('success') %}
                    <div class="col-8">
                        <div class="alert alert-info">{{message}}</div>
                    </div>
                {% endfor %}
                <div class="col-2"></div>
            </div>
            <div class="row">
                    <div class="col-12" style="background:#fff;padding-top: 15px;">
                        <h4><i class="material-icons">message</i> Send us a message</h4>
                        <h6>Help us improve our application. We would love to hear it from you.</h6>
                        <br>
                        <form method="POST" action="sendemail">
                            <div class="form-group">
                                <input type="text" name="subject" class="form-control" id="subject" aria-describedby="subjectHelp" placeholder="Subject..">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="message" id="message" placeholder="Your message here.." rows="8"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}
