{% extends 'base.html.twig' %}

{% block css %}
    <link href="{{ asset('css/modal.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.2.0/dist/leaflet.css">
{% endblock %}

{% block javascript_file %}
    <script src="{{ asset('js/detail.js') }}"></script>
    <script src="https://unpkg.com/leaflet@1.2.0/dist/leaflet.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
{% endblock %}

{% block body %}
    <div id="locationModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="mapid"></div>
        </div>
    </div>

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">{{ schedule.vessel }}</h1>
            <h2 class="jumbotron-heading"><a href="{{ path("company", { 'id':schedule.com_id }) }}">{{ schedule.company }}</a></h2>
            <p class="lead text-muted">
                <strong>Departure:</strong> <a href="javascript:void(0)" class="location" coor="{{ schedule.depCoor }}" loc="dep">{{ schedule.depCity }}, {{ schedule.depProv }}</a> at  {{ schedule.departTime }}
                <br>
                <strong>Est. Arrival:</strong> <a href="javascript:void(0)" class="location" coor="{{ schedule.destCoor }}" loc="dest">{{ schedule.destCity }}, {{ schedule.destProv }}</a> at  {{ schedule.arriveTime }}
                <br>
                <strong>Passenger Price Range:</strong> &#8369;{{ schedule.passPriceRange }}
            </p>
            {% if schedule.booksite %}
                <a href="{{ booksite }}" target="_blank" type="submit" class="btn btn-primary btn-lg">Book Now</a>
            {% endif %}
        </div>
        <br>
        <br>
    </section>

    <div class="album">
        <div class="container">
            <h3>Accomodations</h3>
            <div class="row">
            {% for accomodation in accomodations %}
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ accomodation.accomodation }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Price: &#8369;{{ accomodation.price }}</h6>
                        <p class="card-text">{{ accomodation.features }}</p>
                    </div>
                </div>
            {% endfor %}
            </div>
            <h3>Booking Offices</h3>
            <div class="row">
                <div class="list-group result-sked">
                    {% if schedule.company == '2GO Group Inc.' %}
                        <iframe src="http://travel.2go.com.ph/Outlets/locator.asp" height="700">
                        </iframe>
                    {% endif %}
                    {% for office in booking_offices %}
                        <a href="javascript:void(0)" coor="{{ office.coor }}" loc="booking" address="{{ office.address }}" phone="{{ office.phone }}" class="location list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">
                                                {{ office.address }}
                                            </h5>
                                        </div>
                                        <p class="mb-1">
                                            Contact: {{ office.phone }}
                                        </p>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
