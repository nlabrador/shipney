{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">{{ schedule.company }} - {{ schedule.vessel }}</h1>
            <p class="lead text-muted">
                <strong>Departure:</strong> {{ schedule.departPort }} around  {{ schedule.departTime }}
                <br>
                <strong>Arrival:</strong> {{ schedule.arrivePort }} around  {{ schedule.arriveTime }}
                <br>
                <strong>Passenger Price Range:</strong> {{ schedule.passPriceRange }} PHP
                {% if schedule.vesselType == 'RORO' %}
                    <br>
                    <strong>Vehicle Price Range:</strong> {{ schedule.vehiPriceRange }} PHP
                {% endif %}
            </p>
        </div>
        <br>
        <br>
    </section>

    <div class="album">
        <div class="container">
            <h3>Accomodations</h3>
            <div class="row">
            {% for accomodation in accomodations %}
                &nbsp;<div class="card">
                    <div class="card-body">
                        <h4 class="card-title">{{ accomodation.accomodation }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Price: {{ accomodation.price }}</h6>
                        <p class="card-text">{{ accomodation.features }}</p>
                    </div>
                </div>
            {% endfor %}
            </div>
            <h3>Feedbacks</h3>
            <div class="row">
            </div>
        </div>
    </div>
{% endblock %}
