{% extends 'base.html.twig' %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <img width="550" src="{{ asset('/companies/' ~ company.getId) }}">
            <h1 class="jumbotron-heading">{{ company.getName }}</h1>
            <h3><a href="{{ company.getWebsite }}" class="jumbotron-heading">{{ company.getWebsite }}</a></h3>
            <p class="lead text-muted">
                <strong>Address:</strong> {{ company.getAddress1 }}, {{ company.getAddress2 }}
                <br>
                <strong>Phone:</strong> {{ company.getPhone }} &nbsp;
                <strong>Email:</strong> {{ company.getEmail }}
            </p>
        </div>
        <br>
        <br>
    </section>

    <div class="album">
        <div class="container">
            <h3>Vessel Trips</h3>
            <div class="row">
                {% for vessel in vessels %}
                    <div class="card">
                        <div class="card-body">
                        <h4 class="card-title"><a href="{{ path('detail', { 'id':vessel.getId }) }}">{{ vessel.getName }}</a></h4>
                        <h6 class="card-subtitle mb-2 text-muted">{{ vessel.getVesselType }}</h6>
                        <p class="card-text">
                            <strong>DEPARTURE:</strong> {{ vessel.getDepartPort.getName }}({{ vessel.getDepartTime }})
                            <br><strong>ARRIVAL:</strong> {{ vessel.getArrivePort.getName }}({{ vessel.getArriveTime }})
                            <br><strong>SCHEDULE:</strong> {{ vessel.getSchedDay }}
                        </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
