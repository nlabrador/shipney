{% extends 'base.html.twig' %}

{% block body %}
    <div class="box vessel-back">
    <div class="container">
    <div class="layout layout--center layout--middle xs-ptb2 sm-ptb2">
    <div class="layout__item xs-10of12 sm-6of12 sm-pl3 xs-mrlauto"><div class="layout">
    <div class="layout__item xs-pb1"><div class="list--header xs-text-center sm-text-left">
        Company Detail
    </div></div><div class="layout__item xs-pb1 sm-10of12"><h2 class="xs-text-center sm-text-left">
        {{ company.getName }}
    </h2></div><div class="layout__item sm-8of12"><p class="xs-text-center sm-text-left body-copy">

            <strong><a class="heading" href="{{ company.getWebsite }}">{{ company.getWebsite }}</a></strong>
    </p></div></div></div><div class="layout__item xs-10of12 sm-6of12 xs-mrlauto xs-pt1 sm-pt0"><div class="box box--white-light">
    <div class="layout xs-ph1 sm-p3">
    <div class="layout__item xs-pbh1"><p class="intro-body-copy xs-inseth1">
                <strong>Address</strong><br> {{ company.getAddress1 }}, {{ company.getAddress2 }}
                <br>
                <br>
                <strong>Contact</strong><br>
                <strong><i class="material-icons">phone</i> </strong> {{ company.getPhone }} &nbsp;
                <strong><i class="material-icons">mail</i> </strong> {{ company.getEmail }}

        </p></div>
    </div></div></div>
    </div>
    </div>

    <div class="layout xs-ptb3 box--white-light md-block">
        <div class="layout__item xs-pb1">
            <p class="list--header xs-text-center">Vessel Trips</p>
        </div>
        <div class="layout__item">
            <div class="layout layout--center xs-ptb1 sm-ptb1">
                <div class="layout__item xs-pb1 sm-pb2">
                </div>
                <div class="how-it-works layout__item xs-10of12 sm-8of12"><div class="layout layout--center">

                {% for vessel in vessels %}
                <div class="layout__item md-ptb1 md-4of12 xs-ptb1 xs-pb1 xs-none sm-inline-block">
                </div>
                <div class="layout__item xs-1of12 md-ptb1 xs-ptb1 xs-text-center">
                    <div class="how-it-works__step"></div>
                    <div class="vertical-line xs-none sm-inline-block"></div>
                </div>
                <div class="layout__item xs-12of12 md-6of12">
                    <div class="layout md-ptb1 xs-ptb1">
                        <div class="layout__item xs-pbh0">
                            <h5 class="xs-text-left">
                                {{ vessel.getDepartPort.getTownCity.getTownCity }} - {{ vessel.getArrivePort.getTownCity.getTownCity }}
                            </h5>
                        </div>
                        <div class="layout__item">
                            <p class="xs-text-left caption-copy">
                                <strong>DEPARTURE:</strong> {{ vessel.getDepartPort.getName }}({{ vessel.getDepartTime }})
                                <br><strong>ARRIVAL:</strong> {{ vessel.getArrivePort.getName }}({{ vessel.getArriveTime }})
                                <br><strong>SCHEDULE:</strong> {{ vessel.getSchedDay }}
                                <br>
                                <br>
                                <strong><a href="{{ path('detail', { 'id':vessel.getId }) }}">View Vessel Detail</a></strong>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
</div>
</div>
</div>
</div>
{% endblock %}
